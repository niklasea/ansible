deb http://deb.debian.org/debian/ {{ ansible_distribution_release|lower }}-updates main contrib non-free
deb-src http://deb.debian.org/debian/ {{ ansible_distribution_release|lower }}-updates main contrib non-free
deb http://security.debian.org/debian-security {{ ansible_distribution_release|lower }}-security main contrib non-free
